<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:id="mainPane" accessibleRole="BUTTON" cache="true" prefHeight="600.0" prefWidth="986.0"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="management.libarymanagement.BookControi">

    <top>
        <AnchorPane prefHeight="80.0" styleClass="semiTop-form" stylesheets="@../css/dashbordDesign.css">
            <children>
                <AnchorPane prefHeight="57.0" prefWidth="988.0" styleClass="top-from" stylesheets="@../css/dashbordDesign.css">
                    <children>
                        <Button fx:id="close_btn" layoutX="932.0" layoutY="0.0" minWidth="53.0" mnemonicParsing="false"
                                prefHeight="40.0" prefWidth="53.0" styleClass="close-btn" stylesheets="@../css/dashbordDesign.css" />
                        <Button fx:id="minimize" layoutX="1100.0" layoutY="6.0" minWidth="53.0" mnemonicParsing="false"
                                prefHeight="40.0" prefWidth="53.0" styleClass="minimize-btn" stylesheets="@../css/dashbordDesign.css" />
                        <Label layoutX="116.0" layoutY="8.0" text="Library Management">
                            <font>
                                <Font name="Segoe UI Black" size="24.0" />
                            </font>
                        </Label>
                        <Button layoutX="20.0" layoutY="5.0" mnemonicParsing="false" />
                        <Button layoutX="20.0" layoutY="4.0" mnemonicParsing="false" prefHeight="41.0"
                                prefWidth="54.0" styleClass="bars" stylesheets="@../css/dashbordDesign.css" />
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </top>

    <left>
        <AnchorPane prefWidth="254.0" styleClass="nav-form" stylesheets="@../css/dashbordDesign.css">
            <children>
                <Label layoutX="36.0" layoutY="241.0" styleClass="edit-label" stylesheets="@../css/dashbordDesign.css" text="Welcome" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Black" size="72.0" />
                    </font>
                </Label>

                <Button fx:id="availableBook_btnn" layoutX="45.0" layoutY="375.0" mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="164.0" styleClass="nav-btn"
                        stylesheets="@../css/dashbordDesign.css" text="Available Books"
                        onAction="#showAvailableBooks">
                    <font>
                        <Font name="Microsoft Sans Serif" size="12.0" />
                    </font>
                </Button>

                <Button fx:id="issueBooks_btn" layoutX="45.0" layoutY="430.0" mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="164.0" styleClass="nav-btn"
                        stylesheets="@../css/dashbordDesign.css" text="Issue Books"
                        onAction="#showIssueBooks" />

                <Button fx:id="returnBooks_btn" layoutX="45.0" layoutY="484.0" mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="164.0" styleClass="nav-btn"
                        stylesheets="@../css/dashbordDesign.css" text="Return Books"
                        onAction="#showReturnBooks" />

                <Button fx:id="savedBooks_btn" layoutX="45.0" layoutY="540.0" mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="164.0" styleClass="nav-btn"
                        stylesheets="@../css/dashbordDesign.css" text="Saved Books"
                        onAction="#showSavedBooks" />

                <Button fx:id="signOut_btn" layoutX="23.0" layoutY="629.0" mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="40.0" styleClass="logout-btn"
                        stylesheets="@../css/dashbordDesign.css" />
                <Label layoutX="90.0" layoutY="640.0" styleClass="edit-label1" stylesheets="@../css/dashbordDesign.css" text="Sign Out" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI" size="10.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <center>
        <AnchorPane fx:id="contentArea" styleClass="content-area" prefWidth="600.0">
            <!-- Content loaded dynamically based on button actions will go here -->
        </AnchorPane>
    </center>

    <bottom>
        <Label layoutX="524.0" layoutY="43.0" prefHeight="58.0" prefWidth="99.0" styleClass="edit-label1" stylesheets="@../css/dashbordDesign.css" text="Tìm Kiếm" />
        <TextField fx:id="searchField" layoutX="152.0" layoutY="96.0" prefHeight="41.0" prefWidth="772.0"
                   promptText="Bạn muốn tìm sách gì?" styleClass="text-field" stylesheets="@../css/dashbordDesign.css" />
    </bottom>
</BorderPane>
